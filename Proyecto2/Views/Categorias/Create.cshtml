@model Proyecto2.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<h1 class="text-center mb-4">Crear Nueva Categoría</h1>

<h4 class="text-center">Categoría</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <!-- Validación del formulario -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Campo Nombre -->
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Botones de acción -->
            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Crear" class="btn btn-success btn-md" style="width: 48%;" />
                <a class="btn btn-secondary btn-md" style="width: 48%;" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
