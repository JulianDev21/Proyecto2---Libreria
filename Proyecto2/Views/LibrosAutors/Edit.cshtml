@model Proyecto2.Models.LibrosAutor

@{
    ViewData["Title"] = "Editar Libros Autor";
}

<h1 class="text-center mb-4">Editar Libros Autor</h1>
<h4 class="text-center">Detalles del Libro y Autor</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <!-- Resumen de validación -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="IdLibroAutor" />

            <!-- Campo Autor -->
            <div class="form-group mb-3">
                <label asp-for="IdAutor" class="form-label">Autor</label>
                <select asp-for="IdAutor" class="form-control" asp-items="ViewBag.IdAutor">
                    <option value="">Seleccione un autor</option>
                </select>
                <span asp-validation-for="IdAutor" class="text-danger"></span>
            </div>

            <!-- Campo ISBN -->
            <div class="form-group mb-3">
                <label asp-for="Isbn" class="form-label">ISBN</label>
                <select asp-for="Isbn" class="form-control" asp-items="ViewBag.Isbn">
                    <option value="">Seleccione un ISBN</option>
                </select>
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>

            <!-- Botones de acción -->
            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Guardar" class="btn btn-success btn-md" style="width: 48%;" />
                <a class="btn btn-secondary btn-md" style="width: 48%;" asp-action="Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
