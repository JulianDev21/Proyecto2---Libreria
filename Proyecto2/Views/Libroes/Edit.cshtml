@model Proyecto2.Models.Libro

@{
    ViewData["Title"] = "Editar Libro";
}

<h1 class="text-center mb-4">Editar Libro</h1>

<h4 class="text-center">Detalles del Libro</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <!-- Resumen de validación -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Isbn" />


            <!-- Campo Título -->
            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label">Título del Libro</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <!-- Campo Descripción -->
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Campo Nombre del Autor -->
            <div class="form-group mb-3">
                <label asp-for="NombreAutor" class="form-label">Nombre del Autor</label>
                <input asp-for="NombreAutor" class="form-control" />
                <span asp-validation-for="NombreAutor" class="text-danger"></span>
            </div>

            <!-- Campo Publicación -->
            <div class="form-group mb-3">
                <label asp-for="Publicacion" class="form-label">Fecha de Publicación</label>
                <input asp-for="Publicacion" type="date" class="form-control" />
                <span asp-validation-for="Publicacion" class="text-danger"></span>
            </div>

            <!-- Campo Fecha de Registro -->
            <div class="form-group mb-3">
                <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                <input asp-for="FechaRegistro" type="date" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>

            <!-- Selección de Categoría -->
            <div class="form-group mb-3">
                <label asp-for="CodigoCategoria" class="form-label">Categoría</label>
                <select asp-for="CodigoCategoria" class="form-control" asp-items="ViewBag.CodigoCategoria">
                    <option value="">Seleccione una categoría</option>
                </select>
                <span asp-validation-for="CodigoCategoria" class="text-danger"></span>
            </div>

            <!-- Selección de Editorial -->
            <div class="form-group mb-3">
                <label asp-for="NitEditorial" class="form-label">Editorial</label>
                <select asp-for="NitEditorial" class="form-control" asp-items="ViewBag.NitEditorial">
                    <option value="">Seleccione una editorial</option>
                </select>
                <span asp-validation-for="NitEditorial" class="text-danger"></span>
            </div>

            <!-- Botones de acción -->
            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Guardar" class="btn btn-success btn-md" style="width: 48%;" />
                <a class="btn btn-secondary btn-md" style="width: 48%;" asp-action="Index">Volver a la lista</a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
